{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary" --}}
  
  <div>
    {{#with person}}
      <div>
          <h1>{{name}}</h1>

          <h2>Age: {{age}} Gender: {{gender}}</h2>

          <hr>

          {{#with address}}
          <p>Address: {{street}}, {{city}}, {{state}}, {{zip}}, {{country}}</p>
          {{/with}}

          <hr>

      </div>

      <div>
        <h2>Education:</h2>
        <ul>
          {{#each education}}
          <li>
              <p>Degree: {{degree}}</p>
          </li>
          <li>
              <p>Major: {{major}}</p>
          </li>
          <li>
            <p>University: {{university}}</p>
          </li>
          <li>
            <p>graduationYear: {{graduationYear}}</p>
          </li>
          {{/each}}
        </ul>
      </div>
      <br>
      <div>
        <h2>WorkExpeperience:</h2>
        <ul>
          {{#each workExperience}}
          <li>
            <p>Company: {{company}}</p>
          </li>
          <li>
            <p>Title: {{title}}</p>
          </li>
          <li>
            <p>StartDate: {{startDate}}</p>
          </li>
          <li>
            <p>EndDate: {{endDate}}</p>
          </li>
          <li>
            <p>Responsibilities: {{responsibilities}}</p>
          </li>
          <li>
            <p>Year_founded: {{year_founded}}</p>
          </li>
          <li>
            <p>Industry: {{industry}}</p>
          </li>
          <div>
        <h3>Employees:</h3>
          {{#each employees}}
          <li>
            <p>Name: {{name}}</p>
          </li>
          <li>
            <p>Position: {{position}}</p>
          </li>
          <li>
            <p>Department: {{department}}</p>
          </li>
          <div>
            <h3>Projects:</h3>
            {{#each projects}}
            <li>
              <p>Name: {{name}}</p>
            </li>
            <li>
              <p>Description: {{description}}</p>
            </li>
            <li>
              <p>Status: {{status}}</p>
            </li>
            <div>
              <h4>Teams:</h4>
              {{#each teams}}
              <li>
                <p>Team_name: <b>{{team_name}}</b></p>
              </li>
              <li>
                <p>Team_leader:</p>
                {{#with team_leader}}
                <p>Name: {{name}}</p>
                <p>Title: {{title }}</p>
                <p>Email: <a href="team.leader.email" target="_blank">{{email}}</a></p>
                {{/with}}
              </li>
              <br>
              <li>
                <p>Team_members:</p>
                {{#each team_members}}
                  <p>Name: <b>{{name}}</b></p>
                  <p>Title: {{title}}</p>
                  <p>Email: <a href="team_members.email" target="_blank">{{email}}</a></p>
                  <p>Skills: {{skills}}</p>
                {{#each projects}}
                  <p>Projects: {{name}}</p>
                  <p>Description: {{description}}</p>
                  <p>Technologies: {{technologies}}</p>
              </li>
                  <br>
              <li>
                <p>Team_members:</p>
                {{#each team_members}}
                  <p>Name: {{name}}</p>
                  <p>Title: {{title}}</p>
              </li>
                  {{/each}}
                 {{/each}}
                {{/each}}
            </div>
              {{/each}}
            </div>
            {{/each}}
          </div>
          {{/each}}
      </div>
          {{/each}}
        </ul>
      </div>



    {{/with}}
  </div>

